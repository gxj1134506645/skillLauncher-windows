{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skill Launcher",
  "version": "1.0.0",
  "identifier": "com.skillLauncher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Skill Launcher",
        "width": 600,
        "height": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "focus": true,
        "skipTaskbar": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "template": "wix/main.wxs"
      },
      "nsis": {
        "installerHooks": "NSISinstaller.nsh",
        "installMode": "perMachine"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
