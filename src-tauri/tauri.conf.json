{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skill Launcher",
  "version": "1.0.0",
  "identifier": "com.skillLauncher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Skill Launcher",
        "width": 600,
        "height": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "claude",
          "cmd": "claude",
          "args": true
        }
      ]
    },
    "global-shortcut": {
      "all": true
    },
    "fs": {
      "scope": ["$APPCONFIG/**"]
    }
  }
}
